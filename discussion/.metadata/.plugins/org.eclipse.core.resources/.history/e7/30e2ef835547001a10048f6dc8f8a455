package discussion1;

import java.util.Scanner;

public class MenuDriven {
	public static void pattern(int n) {
		for (int i = 1; i <= n; i++) {
			for (int j = 1; j <= i; j++) {
				System.out.println(j);
			}
			System.out.println();
		}
		for (int i = n-1; i >= 1; i--) {
			for (int j = 1; j <= i; j++) {
				System.out.println(j);
			}
			System.out.println();
		}

	}

	public static void addition(int a, int arr1[], int arr2[]) {
		int sum = 0;
		for (int i = 0; i < a; i++) {
			sum = arr1[i] + arr2[i];
		}
		System.out.println(sum);
	}

	public static void multiplication(int row, int col, int matrix1[][], int matrix2[][]) {
		int mul[][] = new int[row][col];
		for (int i = 0; 1 < row; i++) {
			for (int j = 0; j < col; j++) {
				mul[i][j] = matrix1[i][j] * matrix2[i][j] + mul[i][j];
			}
		}

	}

	public static void string(String str)
	{
		for(int i=0;i<str.length();i++)
		{
		if(str.charAt(i)!='A'||str.charAt(i)!='E'||str.charAt(i)!='I'||str.charAt(i)!='O'||str.charAt(i)!='U'||str.charAt(i)!='a'||str.charAt(i)!='e'||str.charAt(i)!='i'||str.charAt(i)!='o'||str.charAt(i)!='u')
		{
			
			if(str.toLowerCase(i))
			{
				str.replace(str.toUpperCase());
				
			}
				else
				{
					str.replace(str.toLowerCase(i));
				}
			}
		}

	}

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		boolean flag = true;
		do {
			System.out.println("1.pattern");
			System.out.println("2.addition of two array");
			System.out.println("3.mutiplication of matrix");
			System.out.println("4.string");
			System.out.println("5.exit");
			System.out.println("enter the choice");
			int choice = sc.nextInt();
			switch (choice) {
			case 1:
				System.out.println("enter the number");
				int n = sc.nextInt();
				pattern(n);

				break;
			case 2:
				System.out.println("enter the size of 1st the array");
				int a = sc.nextInt();
				int arr1[] = new int[a];
				int arr2[] = new int[a];
				System.out.println("enter the matrix1");
				for (int i = 0; 1 < a; i++) {
					arr1[i] = sc.nextInt();
				}
				System.out.println("enter the matrix2");
				for (int i = 0; 1 < a; i++) {
					arr2[i] = sc.nextInt();
				}
				addition(a, arr1, arr2);
				break;
			case 3:
				System.out.println("enter the size of row matrix");
				int row = sc.nextInt();
				System.out.println("enter the size of column matrix");
				int col = sc.nextInt();
				int matrix1[][] = new int[row][col];
				int matrix2[][] = new int[row][col];
				System.out.println("enter the matrix1");
				for (int i = 0; 1 < row; i++) {
					for (int j = 0; j < col; j++) {
						matrix1[i][j] = sc.nextInt();
					}
				}
				System.out.println("enter the matrix2"); {
				for (int i = 0; 1 < row; i++) {
					for (int j = 0; j < col; j++) {
						matrix2[i][j] = sc.nextInt();
					}
				}
				multiplication(row, col, matrix1, matrix2);

			}

				break;
			case 4:
				System.out.println("enter the string");
				String str = sc.nextLine();
				string(str);
				break;
			case 5:
				flag=false;
			}
		} while (flag);

	}
}
